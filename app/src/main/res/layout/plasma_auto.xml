<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plasma"
    android:orientation="vertical" >



    <Button
        android:id="@+id/btn_scar"
        android:alpha="0"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="75dp"/>
    <Button
        android:id="@+id/btn_mole"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:layout_marginRight="75dp"
        android:alpha="0"
        android:text="Button" />
    <Button
        android:id="@+id/btn_acne"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="325dp"
        android:layout_marginRight="75dp"
        android:alpha="0"

        android:text="Button" />

    <Button
        android:id="@+id/btn_blepharoplasty"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="75dp"
        android:alpha="0"
        android:text="Button" />

    <ImageButton
        android:id="@+id/btn_auto_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_auto_test"
        android:layout_toLeftOf="@id/btn_auto_test"
        android:alpha="0" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_auto_test"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:layout_alignParentRight="true" />

</RelativeLayout>